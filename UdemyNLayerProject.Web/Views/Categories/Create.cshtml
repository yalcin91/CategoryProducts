@model CategoryDto

@{
    ViewData["Title"] = "Create";
}

<h1>Category Ekle</h1>

<div class="row">
    <div class="col-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" >
                <label asp-for="Naam">Category naam: </label>
                <input asp-for="Naam" class="form-control"/>
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>

            <div class="form-group btn-group-vertical">
                <button class="btn btn-primary mb-1">Add</button>
            </div>
        </form>
    </div>
</div>

