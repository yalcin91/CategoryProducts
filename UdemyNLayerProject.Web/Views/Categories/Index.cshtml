@model IEnumerable<CategoryDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>
<a class="btn btn-primary mb-3" asp-action="Create">Categorie Add</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Islemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Naam</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id">Guncelle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
