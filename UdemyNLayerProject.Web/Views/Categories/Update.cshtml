@model CategoryDto

@{
    ViewData["Title"] = "Update";
}

<h1>Category Guncelle</h1>

<div class="row">
    <div class="col-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly"
                 class="text-danger" />

            <div class="form-group">
                <label asp-for="Naam">
                    Category naam:
                </label>

                <input asp-for="Naam"
                       class="form-control" />

                <span asp-validation-for="Naam"
                      class="text-danger" />
            </div>

            <div class="form-group
                 btn-group-vertical">
                <button class="btn
                        btn-primary
                        mb-1">
                    Update
                </button>
            </div>
        </form>
    </div>
</div>
